extends layout

block content

  mixin speaking(link, title, event, location)
    li
      a(href=link) #{title}
      |  <b>#{event}</b>, #{location}

  mixin hack(link, event, location)
    li
      a(href=link)
        b #{event}
      | , #{location}

  .main-container
    .row
      .columns.large-12
        h1 Speaking
        
    .row
      .columns.large-7
        p I regularly run workshops and speak on following topics:
        
        ul
          li JavaScript/Node on hardware technical demonstrations/talks/live coding
          li Internet of Things/Ubiquitous Computing theory and demonstrations
          li Open source project management
          li Hands-on hardware and programming workshops
          
        p Want to have me at your event? Please reach out!
        
        p
          b Speaker bio:
          |  Kelsey Breseman is one of the creators of Tessel and a Steering Committee member of the Tessel Project. She has a degree in neural engineering, and is interested in prosthetics, speculative fiction, circus arts, and really long walks.
        
      .columns.large-5
        img(src="/images/headshot.jpg")
        p
          <br/>
          a.button.large.round(href="//twitter.com/selkeymoonbeam") Ask Kelsey to speak
    
    .row
      .columns.large-6
        h4 Selected prior speaking engagements:
        p
          ul
            +speaking('https://skillsmatter.com/skillscasts/5771-bringing-hardware-to-life-with-js-and-node', 'Bringing Hardware to Life with JS and Node', 'Fullstack conference', 'London, UK')
